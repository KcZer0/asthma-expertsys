{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "requirePragma": false,
  "insertPragma": false,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": ["**/data/**/*.js"],
      "options": {
        "printWidth": 50
      }
    }
  ]
}
